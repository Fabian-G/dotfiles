#!/bin/bash
# Ask user confirmation on deletion of multiple files or directory
if [[ "$#" -gt 1 || -d "$1" ]]; then
    read -p "Are you sure to delete those files (y/N)?" choice
    case "$choice" in
        y|Y) 
            gio trash "$@"
            ;;
        *)
            ;;
    esac
else
    gio trash "$@"
fi 
